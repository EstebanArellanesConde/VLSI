LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY contadec IS
    PORT(
        CLK : IN STD_LOGIC;
        D   : BUFFER INTEGER RANGE 0 TO 9;
        U   : BUFFER INTEGER RANGE 0 TO 9
    );
END ENTITY;

ARCHITECTURE BEAS OF contadec IS
BEGIN

    PROCESS(CLK)
    BEGIN
        IF FALLING_EDGE(CLK) THEN
            -- Si el contador ya lleg√≥ a 00:00, se detiene
            IF D = 0 AND U = 0 THEN
                NULL;  -- No hacer nada, el contador se detiene
            ELSE
                IF U = 0 THEN
                    U <= 9;
                    IF D > 0 THEN
                        D <= D - 1;
                    END IF;
                ELSE
                    U <= U - 1;
                END IF;
            END IF;
        END IF;
    END PROCESS;

END BEAS;
